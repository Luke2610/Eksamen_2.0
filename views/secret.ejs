<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css"/>
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <title>Eksamensopgave 2020</title>
</head>
<body>
    <div class="header">
        <h1>Datingise</h1>
        <!--Welcomes the user. Finds the first- and lastname in the database from app.js-->
        <h2>Welcome <%= loggedInUser[0].firstname + " " + loggedInUser[0].lastname  %> </h2>
        <h2>You're <%=loggedInUser[0].age%> years olds</h2>
        <!--See what you are interested in. In a loop to make it look nicer-->
        <h2>You're interested in: <% for(var i = 0; i < loggedInUser[0].interest.length; i++) {%>
            <span><%= loggedInUser[0].interest[i]%></span>
            <% } %></h2>
    </div>
    <div class="likes">
        <h2>Your current likes:</h2>
        <!--Shows the user their liked profiles-->
            <% for(var i = 0; i < loggedInUser[0].likes.length; i++) {%>
                <h2><%= loggedInUser[0].likes[i]%></h2>
                <% } %>
        </div>
    <div class="matches">
        <h2>Your choices</h2>
        <div class="box">
            <!-- Loop through quotes -->
            <% for(var i = 0; i < user.length; i++) {%>
                <div class="wrap">
                    <div class="users">
                <!-- Output name from the iterated quote object -->
                <p>Username: <%= user[i].username %></p>
                <p>Name: <%= user[i].firstname + " " + user[i].lastname %></p>
                <!-- Output quote from the iterated quote object -->
                <p>Age: <%= user[i].age%></p>
                <p>Interest: <%=user[i].interest%></p>
                <form action="/like" method="POST">
                    <input type="text" name="likes" value="<%=user[i].username %>" style="display: none;">
                <button type="submit">Like</button>
                </form>
                <form action="/dislike" method="POST">
                    <input type="text" name="dislikes" value="<%=user[i].username %>" style="display: none;">
                <button type="submit">Dislike</button>
                </form>
                </div>
              </div>
            <% } %>
        </div>
    </div>
    <div class="settings">
        <h2>Settings</h2>
        <a href="/logout"><button>Logout</button></a><br><br>
        <form action="/secret" method="POST">
            <p>You want to delete your user?</p>
            <button type="submit">Delete user</button>
        </form>
        <p>You want to update your user? Write in below!</p>
        <form action="/update" method="POST">
            <input type="text" id="firstname" name="firstname" placeholder="First name" required><br><br>
            <input type="text" id="lastname" name="lastname" placeholder="Last Name" required><br><br>
            <input type="text" id="age" name="age" placeholder="Age" required><br><br>
            <button type="submit">Update!</button>
        </form>
    </div>
    <script src="/script.js" type="text/javascript"></script>
</body>
</html>