<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css"/>
    <!--Importing some fonts for the website (because why not ðŸ˜Ž)-->
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <title>Eksamensopgave 2020</title>
</head>
<body>
    <div class="header">
        <h1>Datingise</h1>
    </div>
    <div class="signup">
        <h2>Sign up!</h2>
        <form action="/register" id="signUp" method="POST">
            <input type="text" id="username" name="username" placeholder="Username" required><br><br>
            <input type="password" id="password" name="password" placeholder="Password" required><br><br>
            <input type="text" id="firstname" name="firstname" placeholder="First name" required><br><br>
            <input type="text" id="lastname" name="lastname" placeholder="Last Name" required><br><br>
            <input type="text" id="age" name="age" placeholder="Age" required><br><br>

            <label for="gender">Gender:</label><br>
            <input type="radio" class="gender" name="gender" value="male" required>
            <label for="male">Male</label><br>
            <input type="radio" class="gender" name="gender" value="female" required>
            <label for="female">Female</label><br>

            <div class="interests">
                <h3>Interests</h3>
                <input type="checkbox" id="interest1" name="interest" value="Cars">
                <label for="interest1"> Cars</label><br>
                <input type="checkbox" id="interest2" name="interest" value="Horses">
                <label for="interest2"> Horses</label><br>
                <input type="checkbox" id="interest3" name="interest" value="Family">
                <label for="interest3"> Family</label> <br>
                <input type="checkbox" id="interest4" name="interest" value="Gaming">
                <label for="interest4"> Gaming</label><br>
                <input type="checkbox" id="interest5" name="interest" value="Food">
                <label for="interest5"> Food</label> <br>
                <input type="checkbox" id="interest6" name="interest" value="Movies">
                <label for="interest6"> Movies</label>
                <br><br>
            </div>
            <button id='create-button' type="submit">Sign up!</button>
        </form>
        <p>You already have a login? Press the button below</p>
        <a href="/login"><button>Login</button></a>
    </div>
    <script src="/script.js" type="text/javascript"></script>
</body>
</html>